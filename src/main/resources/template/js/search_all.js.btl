    order: '${api.order}',
    link: '${removeLineBreaks(api.link)}',
    desc: '${removeLineBreaks(api.desc)}',
    href: '${RemoveLineBreaksForHref(api.desc)}',
    list: []
})
<%for(doc in api.list) {%>
api[${apiLP.dataIndex}].list.push({
    order: '${doc.order}',
    deprecated: '${doc.deprecated}',
    desc: '${removeLineBreaks(doc.desc)}',
    href: '${RemoveLineBreaksForHref(doc.desc)}',
